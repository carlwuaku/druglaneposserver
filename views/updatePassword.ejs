<%- include ('partials/header') -%>
<section class="content ">
        <div class="container">
            <div class="flex-container small-margins">
                <div><a  class="backBtn link"><i class="fa fa-arrow-left"></i> Back</a></div>
                <div><a  href="/"><i class="fa fa-home"></i> Home </a></div>
                <!-- <div><a  href="/setup"><i class="fa fa-home"></i> Setup </a></div> -->
            </div>
            <h3>Update Admin Password</h3>
            <div class="row content-justify-center">
                <div class="col-6"></div>
            </div>
            <form action="doUpdatePassword" method="POST">
                <div class="card">
                    <div class="card-body">
                        <%
          if(message != ""){
      %>
                <div class="alert alert-danger">
                        <%= message %>
                </div>
                <% } 
        %>
                        <div class="form-group">
                            <label >Old Password</label> <br>
                            <input type="password" name="old_password">
                        </div>
                        <div class="form-group">
                            <label >New Password</label> <br>
                            <input type="password" name="new_password">
                        </div>
                        <div class="form-group">
                            <label >Confirm New Password</label> <br>
                            <input type="password" name="confirm_new_password">
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
</section>

